" side numbers
set number
set relativenumber

" mouse
set mouse=a

" syntax
syntax enable
set showmatch

" show typed commands
set showcmd

" general settings
set encoding=utf-8

" Tab and indent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set smarttab
filetype indent on
set autoindent
set smartindent
